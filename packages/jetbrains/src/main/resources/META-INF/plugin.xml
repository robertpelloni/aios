<idea-plugin>
    <id>com.aios.plugin</id>
    <name>AIOS</name>
    <vendor>OhMyOpenCode</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="AIOS" secondary="true" icon="AllIcons.General.Information" anchor="right"
                    factoryClass="com.aios.plugin.AiosToolWindowFactory"/>
    </extensions>

    <actions>
        <group id="AIOS.Menu" text="AIOS" description="AIOS Actions">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="AIOS.StartDebate" class="com.aios.plugin.actions.StartDebateAction" text="Start Council Debate"
                    description="Starts a new AI Council debate">
                <keyboard-shortcut keymap="$default" first-keystroke="control alt D"/>
            </action>
            <action id="AIOS.ArchitectMode" class="com.aios.plugin.actions.ArchitectModeAction" text="Open Architect Mode"
                    description="Opens Architect Mode for complex tasks"/>
        </group>
    </actions>
</idea-plugin>
